<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F1"
    android:padding="16dp"
    tools:context=".ui.habits.HabitsFragment">

    <!-- Title -->
    <TextView
        android:id="@+id/text_Habits"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="HABIT TRACKER"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp" />


    <!-- Water Intake -->
    <TextView
        android:id="@+id/label_water"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Water Intake"
        android:gravity="center"
        android:background="#ECD2E0"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/text_Habits"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/input_water"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="12dp" />

    <EditText
        android:id="@+id/input_water"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:inputType="number"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/label_water"
        app:layout_constraintBottom_toBottomOf="@id/label_water"
        app:layout_constraintStart_toEndOf="@id/label_water"
        app:layout_constraintEnd_toStartOf="@id/unit_water"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/unit_water"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:text="cups"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/input_water"
        app:layout_constraintBottom_toBottomOf="@id/input_water"
        app:layout_constraintStart_toEndOf="@id/input_water"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Exercise -->
    <TextView
        android:id="@+id/label_exercise"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Exercise"
        android:gravity="center"
        android:background="#ECD2E0"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/label_water"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/input_exercise" />

    <EditText
        android:id="@+id/input_exercise"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:inputType="text"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/label_exercise"
        app:layout_constraintBottom_toBottomOf="@id/label_exercise"
        app:layout_constraintStart_toEndOf="@id/label_exercise"
        app:layout_constraintEnd_toStartOf="@id/unit_exercise"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/unit_exercise"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:text="hrs"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/input_exercise"
        app:layout_constraintBottom_toBottomOf="@id/input_exercise"
        app:layout_constraintStart_toEndOf="@id/input_exercise"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sleep -->
    <TextView
        android:id="@+id/label_sleep"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Sleep"
        android:gravity="center"
        android:background="#ECD2E0"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/label_exercise"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/input_sleep" />

    <EditText
        android:id="@+id/input_sleep"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:inputType="numberDecimal"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/label_sleep"
        app:layout_constraintBottom_toBottomOf="@id/label_sleep"
        app:layout_constraintStart_toEndOf="@id/label_sleep"
        app:layout_constraintEnd_toStartOf="@id/unit_sleep"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/unit_sleep"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:text="hrs"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/input_sleep"
        app:layout_constraintBottom_toBottomOf="@id/input_sleep"
        app:layout_constraintStart_toEndOf="@id/input_sleep"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Add Habit -->
    <Button
        android:id="@+id/buttonAddHabit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ ADD HABIT"
        android:textAllCaps="true"
        android:backgroundTint="#CED1F8"
        android:textColor="#000000"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/label_sleep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Save Button -->
    <Button
        android:id="@+id/buttonSaveHabits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE TODAY'S HABITS"
        android:textAllCaps="true"
        android:backgroundTint="#CED1F8"
        android:textColor="#000000"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/buttonAddHabit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
